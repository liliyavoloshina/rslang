{
	"env": {
		"browser": true,
		"es2021": true
	},
	"root": true,
	"extends": ["airbnb", "airbnb-typescript", "prettier", "eslint:recommended", "plugin:react/recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "@typescript-eslint"],
	"rules": {
		"@typescript-eslint/no-non-null-assertion": "off",
		// useful when need to pass all properties to component instead of passing one by one
		"react/jsx-props-no-spreading": "off",
		"react/no-array-index-key": "off",
		// for redux
		"no-param-reassign": "off",
		"no-return-assign": "off",
		// for mui conditional button's color
		"no-nested-ternary": "off",
		// when change response from aggregatted words
		"no-underscore-dangle": "off"
	}
}
